{
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "skipLibCheck": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "react": [
                "../node_modules/preact/compat/"
            ],
            "react-dom": [
                "../node_modules/preact/compat/"
            ]
        },
        "types": [ "node" ]
    },
    "include": [
        "./**/*",
        "../e2e/**/*",
        "../declarations.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}